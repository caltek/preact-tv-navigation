{
  "name": "preact-spatial-navigation",
  "version": "1.0.0",
  "description": "A powerful Preact library for TV-style spatial navigation with LRUD algorithm, virtualized lists/grids, and smart TV support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "lib",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:types",
    "build:lib": "vite build --mode lib",
    "build:types": "tsc --project tsconfig.lib.json --declaration --emitDeclarationOnly --outDir dist",
    "build:demo": "tsc -b && vite build",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "postpublish": "echo 'âœ… Published successfully! Don't forget to tag the release.'"
  },
  "keywords": [
    "preact",
    "spatial-navigation",
    "tv",
    "smart-tv",
    "lrud",
    "remote-control",
    "focus-management",
    "accessibility",
    "virtualized-list",
    "virtualized-grid",
    "tizen",
    "webos",
    "tv-app",
    "d-pad",
    "navigation"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/preact-spatial-navigation.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/preact-spatial-navigation/issues"
  },
  "homepage": "https://github.com/yourusername/preact-spatial-navigation#readme",
  "peerDependencies": {
    "preact": "^10.0.0"
  },
  "dependencies": {
    "@bam.tech/lrud": "^8.0.2",
    "lodash.uniqueid": "^4.0.1",
    "mitt": "^3.0.1"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@types/lodash.uniqueid": "^4.0.9",
    "@types/node": "^24.6.0",
    "preact": "^10.27.2",
    "typescript": "~5.9.3",
    "vite": "^7.1.7"
  }
}
